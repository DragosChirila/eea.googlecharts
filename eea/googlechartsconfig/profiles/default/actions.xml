<?xml version="1.0"?>
<object name="portal_actions" meta_type="Plone Actions Tool"
    xmlns:i18n="http://xml.zope.org/namespaces/i18n">

    <action-provider name="portal_actions">
        <action title="Edit GoogleCharts View" action_id="googlecharts.edit" category="object"
           condition_expr="object/@@daviz_support/is_exhibit"
            url_expr="string:${object/absolute_url}/googlecharts-daviz-edit.html"
            visible="True">
            <permission>Modify portal content</permission>
        </action>

    </action-provider>
</object>
