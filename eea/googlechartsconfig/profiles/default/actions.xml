<?xml version="1.0"?>
<object name="portal_actions" meta_type="Plone Actions Tool"
    xmlns:i18n="http://xml.zope.org/namespaces/i18n">

    <action-provider name="portal_actions">
        <action title="Edit GoogleChart View" action_id="googlechart.edit" category="object"
           condition_expr="object/@@googlechart_support/is_googlechart"
            url_expr="string:${object/absolute_url}/googlechart-edit.html"
            visible="True">
            <permission>Modify portal content</permission>
        </action>

        <action title="Disable googlechart view" action_id="googlechart.disable" category="object_buttons"
           condition_expr="object/@@googlechart_support/can_disable"
           url_expr="string:${object/absolute_url}/@@googlechart_support/disable"
            visible="True">
            <permission>Modify portal content</permission>
        </action>

        <action title="Enable googlechart view" action_id="googlechart.enable" category="object_buttons"
           condition_expr="object/@@googlechart_support/can_enable"
            url_expr="string:${object/absolute_url}/@@googlechart_support/enable"
            visible="True">
            <permission>Modify portal content</permission>
        </action>

        <action title="GoogleCharts" action_id="googlecharts.view" category="object"
           condition_expr="object/@@googlechart_support/is_googlechart"
            url_expr="string:${object/absolute_url}/googlechart-view.html"
            visible="True">
            <permission>Modify portal content</permission>
        </action>

    </action-provider>
</object>
