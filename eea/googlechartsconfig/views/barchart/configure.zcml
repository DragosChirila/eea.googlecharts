<configure
  xmlns="http://namespaces.zope.org/zope"
  xmlns:daviz="http://namespaces.zope.org/daviz"
  xmlns:browser="http://namespaces.zope.org/browser">

  <daviz:view name="googlechart.barchart" />
  <daviz:chart name="googlechart.barchart" />
  
  <browser:page
    name="googlechart.barchart"
    for="eea.daviz.interfaces.IExhibitJson"
    template="view.pt"
    class=".view.View"
    permission="zope2.View"
    />

  <browser:page
    name="googlechart.barchart.edit"
    for="eea.daviz.interfaces.IExhibitJson"
    class=".edit.Edit"
    permission="cmf.ModifyPortalContent"
    />

  <browser:page
    name="googlechart.barchart.json"
    for="eea.daviz.interfaces.IExhibitJson"
    class=".view.View"
    attribute="settingsAndData"
    permission="zope2.View"
    />

  <subscriber
    for="eea.daviz.interfaces.IExhibitJson
         eea.daviz.interfaces.IDavizFacetDeletedEvent"
    handler=".events.barchart_facet_deleted"
    />

</configure>
